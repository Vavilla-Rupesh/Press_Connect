# Environment variables for Press Connect Backend
# Copy this file to .env and fill in your actual values

# ======================================
# YouTube API Configuration
# ======================================
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8080/auth/callback

# ======================================
# Server Configuration
# ======================================
PORT=3000
NODE_ENV=development

# ======================================
# Security Configuration
# ======================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ======================================
# Database Configuration
# ======================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=press_connect_dev
DB_USER=press_connect_user
DB_PASSWORD=your_database_password

# ======================================
# CORS Configuration
# ======================================
# Allowed origins for CORS (comma separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ======================================
# Frontend Configuration URLs
# ======================================
# Base URL where the frontend is hosted
FRONTEND_URL=http://localhost:8080

# ======================================
# Logging Configuration
# ======================================
LOG_LEVEL=debug

# ======================================
# Production URLs (for reference)
# ======================================
# YOUTUBE_REDIRECT_URI=https://app.pressconnect.com/auth/callback
# FRONTEND_URL=https://app.pressconnect.com
# CORS_ORIGINS=https://app.pressconnect.com
# NODE_ENV=production
# LOG_LEVEL=warn

# ======================================
# Example values (replace with your actual credentials):
# ======================================
# YOUTUBE_API_KEY=AIzaSyDemoKeyForYouTubeAPI
# YOUTUBE_CLIENT_ID=123456789-abcdef.apps.googleusercontent.com
# YOUTUBE_CLIENT_SECRET=GOCSPX-demoClientSecret
# JWT_SECRET=super_secure_jwt_secret_32_chars_long
# SESSION_SECRET=super_secure_session_secret_here